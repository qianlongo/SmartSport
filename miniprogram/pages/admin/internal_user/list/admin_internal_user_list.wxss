@import "../../../../style/project/base/admin.wxss";

/* 弹窗样式 */
.modal-mask {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: rgba(0, 0, 0, 0.5);
	z-index: 9999;
	display: flex;
	align-items: center;
	justify-content: center;
}

.modal-content {
	background: white;
	border-radius: 20rpx;
	width: 80%;
	max-width: 600rpx;
	max-height: 80%;
	overflow-y: auto;
	position: relative;
	z-index: 10000;
	box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
	padding: 30rpx;
	border-bottom: 1rpx solid #eee;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.modal-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
}

.modal-close {
	font-size: 40rpx;
	color: #999;
	line-height: 1;
}

.modal-body {
	padding: 30rpx;
}

.form-group {
	margin-bottom: 15rpx;
	margin-top: 0;
	padding-top: 0;
	border-top: none;
}

.form-label {
	font-size: 28rpx;
	color: #333;
	margin-bottom: 10rpx;
	width: 140rpx;
	display: inline-block;
	white-space: nowrap;
}

.form-input {
	border: 1rpx solid #ddd;
	border-radius: 8rpx;
	padding: 0 20rpx;
	font-size: 28rpx;
	width: 100%;
	box-sizing: border-box;
	background-color: #fafafa;
	transition: all 0.3s ease;
	height: 80rpx;
	line-height: 40rpx;
}

.form-input:focus {
	border-color: #24C68A;
	background-color: #fff;
	box-shadow: 0 0 0 2rpx rgba(36, 198, 138, 0.2);
}

.modal-footer {
	padding: 30rpx;
	border-top: 1rpx solid #eee;
	display: flex;
	justify-content: center;
	gap: 60rpx;
}

.btn-cancel {
	background: #f5f5f5;
	color: #666;
	border: none;
	padding: 20rpx 40rpx;
	border-radius: 8rpx;
	font-size: 28rpx;
}



.btn-confirm-disabled {
	background: #ccc;
	color: #999;
	border: none;
	padding: 20rpx 40rpx;
	border-radius: 8rpx;
	font-size: 28rpx;
	cursor: not-allowed;
}

.required {
	color: #ff4444;
	font-size: 24rpx;
	margin-right: 8rpx;
} 