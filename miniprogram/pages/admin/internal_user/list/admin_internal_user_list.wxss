@import "../../../../style/project/base/admin.wxss";

/* 弹窗样式 */
.modal-mask {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: rgba(0, 0, 0, 0.5);
	z-index: 9999;
	display: flex;
	align-items: center;
	justify-content: center;
}

.modal-content {
	background: white;
	border-radius: 20rpx;
	width: 80%;
	max-width: 600rpx;
	max-height: 80%;
	overflow-y: auto;
	position: relative;
	z-index: 10000;
}

.modal-header {
	padding: 30rpx;
	border-bottom: 1rpx solid #eee;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.modal-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
}

.modal-close {
	font-size: 40rpx;
	color: #999;
	line-height: 1;
}

.modal-body {
	padding: 30rpx;
}

.form-group {
	margin-bottom: 30rpx;
}

.form-label {
	font-size: 28rpx;
	color: #333;
	margin-bottom: 10rpx;
}

.form-input {
	border: 1rpx solid #ddd;
	border-radius: 8rpx;
	padding: 20rpx;
	font-size: 28rpx;
	width: 100%;
	box-sizing: border-box;
}

.modal-footer {
	padding: 30rpx;
	border-top: 1rpx solid #eee;
	display: flex;
	justify-content: space-between;
}

.btn-cancel {
	background: #f5f5f5;
	color: #666;
	border: none;
	padding: 20rpx 40rpx;
	border-radius: 8rpx;
	font-size: 28rpx;
}

.btn-confirm {
	background: #24C68A;
	color: white;
	border: none;
	padding: 20rpx 40rpx;
	border-radius: 8rpx;
	font-size: 28rpx;
}

.required {
	color: #ff4444;
	font-size: 24rpx;
} 