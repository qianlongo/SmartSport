<template name="meetJoinTpl">
	<view wx:if="{{isLoad===null}}" class="margin-top load notexist text-l load-project"></view>
	<view wx:if="{{isLoad===false}}" class="margin-top load loading text-l load-project"></view>

	<view wx:if="{{isLoad}}" class="main padding-project">

		<view class="article-box">
			<view class="form-box card-project shadow-project">
				<view class="form-group">
					<view class="title text-cut">{{meet.MEET_TITLE}}</view>
				</view>
				<view class="form-group" bindtap="url" data-type="back">
					<view class="title text-cut" style="padding-right:0"><text class="icon-calendar margin-right-xxs"></text>{{meet.dayDesc}} <text class="tag mid bg-orange light round margin-right">更改时段</text></view>
				</view>

			</view>

			<!-- form content begin -->
			<view class="form-box card-project shadow-project margin-top">				
				<!-- 携带人员类型选择 -->
				<view class="form-group arrow">
					<view class="title">携带人员类型：</view>
					<picker class="picker-base" bindchange="bindCarryTypeChange" value="{{carryTypeIndex}}" range="{{carryTypeNames}}">
						<view class="picker-select">
							<text wx:if="{{carryTypeIndex >= 0}}">{{carryTypeNames[carryTypeIndex]}}</text>
							<text wx:else class="text-grey">请选择携带人员类型</text>
						</view>
					</picker>
				</view>

				<!-- 携带人数选择 -->
				<view class="form-group arrow" wx:if="{{carryTypeIndex >= 0 && carryTypeIndex < 3}}">
					<view class="title">携带人数：</view>
					<picker class="picker-base" bindchange="bindCarryCountChange" value="{{carryCountIndex}}" range="{{carryCountNames}}">
						<view class="picker-select">
							<text wx:if="{{carryCountIndex >= 0}}">{{carryCountNames[carryCountIndex]}}</text>
							<text wx:else class="text-grey">请选择携带人数</text>
						</view>
					</picker>
				</view>

				<!-- 携带人员姓名输入 -->
				<view class="form-group" wx:if="{{carryCount > 0 && carryTypeIndex >= 0 && carryTypeIndex < 3}}">
					<!-- <view class="form-label">携带人员姓名</view> -->
					<view class="carry-names-list">
						<view class="carry-name-item" wx:for="{{carryNames}}" wx:key="index">
							<view class="carry-name-label">携带人员{{index + 1}}姓名：</view>
							<input class="form-input carry-input" style="flex: 1; width: auto; min-width: 0; margin-left: 30rpx;" placeholder="请输入姓名" value="{{item}}" bindinput="bindCarryNameInput" data-index="{{index}}" />
						</view>
					</view>
				</view>
			</view>
			<!-- form content end -->

		</view>

		<button bindtap="bindCheckTap" class="btn-base btn-project" style="margin-bottom:100rpx;">提交</button>


	</view>
</template>