
.form-group .line-desc{
	font-size:28rpx;
	text-align: center;
	width:100%;
	color:#666;
}

.submit-line {
	width: 100%;
}

/* 携带人员设置样式 */
.form-label {
	font-size: 28rpx;
	color: #333;
	margin-bottom: 10rpx;
	display: block;
}

.form-input {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	padding: 0 20rpx;
	border: none;
	border-radius: 8rpx;
	background-color: #fafafa;
	transition: all 0.3s ease;
	box-sizing: border-box;
}

/* 携带人员姓名输入框样式 */
.carry-input {
	flex: 1;
	width: auto;
	min-width: 0;
	margin-left: 30rpx;
	
}

.form-input:focus {
	background-color: #fff;
	box-shadow: 0 0 0 2rpx rgba(36, 198, 138, 0.2);
}

.carry-names-list {
	margin-top: 10rpx;
}

.carry-name-item {
	display: flex;
	align-items: center;
	margin-bottom: 15rpx;
}

.carry-name-label {
	font-size: 28rpx;
	color: #333;
	flex-shrink: 0;
	white-space: nowrap;
}



/* 给picker箭头留出空间 */
.form-group.arrow .picker-select {
	padding-right: 30rpx;
}
 